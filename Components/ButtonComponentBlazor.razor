@using Microsoft.JSInterop
@inject NavigationManager NavManager
@using Microsoft.AspNetCore.Components.Web

@code {
    [Parameter] public string Type { get; set; }
    [Parameter] public string Value { get; set; }
    [Parameter] public string OnClickUrlString { get; set; }
    [Parameter] public string BgColor { get; set; } = "btn";
    [Parameter] public string OnMouseEnterBgColor { get; set; }
    [Parameter] public string AdditionalStyleTags { get; set; }

    private void Navigate()
    {
        if (!string.IsNullOrWhiteSpace(OnClickUrlString))
        {
            NavManager.NavigateTo(OnClickUrlString);
        }
    }
}

<a href="@OnClickUrlString" target="_blank" rel="noopener noreferrer"
    class="inline-block px-4 py-2 rounded-2xl transition text-black hover:text-white"
    style="background-color: #@BgColor;@AdditionalStyleTags"
    onmouseover="this.style.backgroundColor='#@OnMouseEnterBgColor';"
    onmouseleave="this.style.backgroundColor='#@BgColor';">
    @Value
</a>