@model GameStoreWeb.Models.LoginViewModel

@{
    Layout = "/Views/Shared/_AuthLayout.cshtml";
}

<h2>Login</h2>

@{
    if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    if (TempData["Registration_success_message"] != null)
    {
        <div class="alert alert-warning bg-success alert-dismissible fade show" role="alert">
            @TempData["Registration_success_message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
}

<form asp-action="Login" method="post">
    <div>
        <label style="width: 100px;" asp-for="Username"></label>
        <input asp-for="Username" />
        <span asp-validation-for="Username"></span>
    </div>
    <div>
        <label style="width: 100px;" asp-for="Password"></label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password"></span>
    </div>
    @* <button type="submit">Login</button> *@
    <component type="typeof(GameStoreWeb.Components.ButtonComponent)" render-mode="ServerPrerendered"
        param-Type='@("submit")' param-Value='@("Login")' param-BgColor='@("48A6A7")'
        param-OnMouseEnterBgColor='@("006A71")' />

    <a href="@($"{ViewBag.AuthServiceBaseUrl}/api/auth/google/login")"
        class="btn btn-danger mt-2 d-flex align-items-center justify-content-center"
        style="gap: 8px; text-decoration: none; color: white; width: 200px;">
        <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google"
            style="width:20px; height:20px;">
        <span>Sign in with Google</span>
    </a>
</form>

<a asp-action="Register">Don't have an account? Register</a>
